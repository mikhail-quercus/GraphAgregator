<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.quercus.graphagregator.MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Переодичность обновления:"
    android:id="@+id/textView"
    android:layout_marginTop="34dp"
    android:layout_marginStart="32dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/update_only_wifi"
    android:id="@+id/is_update_only_wifi"
    android:checked="false"
    android:layout_below="@+id/update_frequency"
    android:layout_alignStart="@+id/update_frequency" />

<Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/update_frequency"
    android:layout_below="@+id/textView"
    android:entries="@array/update_frequency"
    android:layout_alignStart="@+id/textView"
    android:layout_alignEnd="@+id/textView" />
</RelativeLayout>
