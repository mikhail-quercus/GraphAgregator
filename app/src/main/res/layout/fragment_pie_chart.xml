<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="10"
    tools:context="com.quercus.graphagregator.PieChartFragment">

    <TextView
        android:id = "@+id/arrow_text"
        android:text="@string/arrow_text"
        android:ems="8"
        android:gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="4" />

    <Button
        android:id = "@+id/arrow_right"
        android:drawableBottom="@drawable/ic_keyboard_arrow_right_black_36dp"
        android:layout_row="0"
        android:layout_column="5" />


    <Button
        android:id = "@+id/arrow_left"
        android:drawableBottom="@drawable/ic_keyboard_arrow_left_black_36dp"
        android:layout_row="0"
        android:layout_column="0" />

    <Spinner
        android:id = "@+id/calculation_system_data"
        android:layout_row="0"
        android:layout_column="7"
        android:layout_columnSpan="3"
        android:entries="@array/calculation_system_data"
        android:layout_width="wrap_content" />




    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</GridLayout>
